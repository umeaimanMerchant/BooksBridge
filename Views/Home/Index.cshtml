@{
    ViewData["Title"] = "Home";
}

<main>
    <div class="container">
        <section class="hero-banner">
            <div class="hero-content">
                <h1>Welcome to BookBridge</h1>
                <p>Discover, Share, and Borrow Books in Your Community</p>
            </div>
        </section>

        <section class="home-feature-sections">
            <div class="container new-layout">
                <div class="text-image-row">
                    <div class="text">Where stories find their next chapter</div>
                    <img src="~/img/img1.jpeg" alt="Reading Illustration" class="image">
                </div>
                <div class="text-image-row reverse">
                    <div class="text">We're the most trusted platform for readers and book lovers to share, borrow, and discover new stories</div>
                    <img src="~/img/img2.jpeg" alt="Sharing Books Illustration" class="image">
                </div>
                <div class="text-image-row">
                    <div class="text">Start your reading journey today!</div>
                    <img src="~/img/img3.jpeg" alt="Reading Journey Illustration" class="image">
                </div>
                <div class="text-image-row reverse">
                    <div class="text">Explore classics, bestsellers, and hidden gems</div>
                    <img src="~/img/img4.jpeg" alt="Books Stack Illustration" class="image">
                </div>
                <div class="center-button">
                    <a asp-controller="Books" asp-action="Read" class="btn-primary">Start My Journey</a>
                </div>
            </div>
        </section>
    </div>
</main>

@model BookBridgeApp.Models.Book
@{
    ViewData["Title"] = "Delete Book";
    var booksList = ViewBag.BooksList as List<BookBridgeApp.Models.Book>;
}

<main>
    <div class="container">
        <section class="section">
            <h1 class="section-title">Remove Book</h1>
            <div class="card">
                <p>Select a book to remove form your collection. This action cannot be undone.</p>
            </div>
        </section>

        <section class="section">
            <div class="card">
                <form asp-action="DeleteConfirmed" method="post">
                    <div class="form-group">
                        <label for="bookId">Select Book to Remove *</label>
                        <select id="bookId" name="id" class="form-control" required>
                            <option value="">Choose a book...</option>
                            @foreach (var b in booksList)
                            {
                                <option value="@b.Id">@b.Title</option>
                            }
                        </select>
                    </div>

                    <div class="form-actions mt-3">
                        <button type="submit" class="btn btn-danger" onclick="return showSuccessPopup()">Remove Book</button>
                        <a asp-action="Read" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </section>
    </div>
</main>
@section Scripts {
    <script>
        function showSuccessPopup() {
            alert("Book deleted successfully!");
            return true; // continue with form submission
        }
    </script>
}
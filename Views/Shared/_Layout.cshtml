<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookBridgeApp</title>
    <script type="importmap"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Default site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookBridgeApp.styles.css" asp-append-version="true" />

    <!-- ✅ Your custom CSS -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <!-- ✅ Reformatted Purple Navigation Bar -->
    <header>
        <div class="container">
            <nav class="purple-navbar">
                <div class="logo">
                    <img src="~/img/book_logo.png" alt="BookBridge Logo" class="logo-img" />
                    <span>BookBridge</span>
                </div>
                <ul class="nav-links">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="DataVisualization">Online Books</a></li> 
                <li><a asp-controller="Books" asp-action="Read">Borrow Books</a></li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Admin Portal
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                        <li><a class="dropdown-item" asp-controller="Books" asp-action="Create">Add Book</a></li>
                        <li><a class="dropdown-item" asp-controller="Books" asp-action="Update">Update Book</a></li>
                        <li><a class="dropdown-item" asp-controller="Books" asp-action="Delete">Remove Book</a></li>
                        <li><a class="dropdown-item" asp-controller="Books" asp-action="Charts">Library Statistics</a></li>
                    </ul>
                </li>

                <li><a asp-controller="About" asp-action="Index">About Us</a></li>
            </ul>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BookBridgeApp
        </div>
    </footer>

    <!-- jQuery + Bootstrap bundle -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ Your custom JS -->
    <script src="~/js/scripts.js" asp-append-version="true"></script>
    <script src="~/js/charts.js" asp-append-version="true"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
